Package: xsonar
Version: @VERSION@
Revision: 1
Source: http://schwehr.org/software/xsonar/%n-%v.tar.bz2
Source-MD5: @MD5@
BuildDepends: lesstif
Depends: lesstif-shlibs, app-defaults
CompileScript: <<
  echo "Ignore make complaining 2 times about byteOrder"
  make
<<
InstallScript: <<
  mkdir -p %i/bin
  cp xsonar/xsonar showimage/showimage %i/bin/
  mkdir -p %i/etc/app-defaults
  cp showimage/ShowImage.ad xsonar/XSonar.ad %i/etc/app-defaults/
<<
